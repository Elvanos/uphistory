.E_block
	padding: 50px 15px

	&.-noPaddingTop
		padding-top: 0

	&.-noPaddingBottom
		padding-bottom: 0

	&__inner
		margin: auto
		max-width: 1200px

		&.-narrow
			max-width: 950px

		&__grid
			display: flex
			flex-wrap: wrap

			+BSQ_XS()
				display: block

				&__collumn
					width: calc(100% - 30px) !important

			&.-grid3
				& ^[-1]__collumn
					width: calc(33% - 30px)
					padding: 0 15px

			&.-grid4
				& ^[-1]__collumn
					width: calc(25% - 30px)
					padding: 0 15px

			&.-grid2-sm
				& ^[-1]__collumn
					+BSQ_SM()
						width: calc(50% - 30px)
						padding: 0 15px

			ul
				font-size: 1.4rem
				line-height: 1.3
				font-weight: 500

			li
				padding-bottom: 15px
