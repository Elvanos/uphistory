// BACKGROUND MODIFIERS
.background
	// Colors
	&.-greenMiddleBG
		background-color: $let_mainGreenMiddle

	&.-greenLightBG
		background-color: $let_mainGreenLight

	&.-greenDarkBG
		background-color: $let_mainGreenDark

	&.-whiteBG
		background-color: #fff

	&.-blackBG
		background-color: #000

// TEXT MODIFIERS
.text
	// Positions
	&.-center
		text-align: center

	&.-left
		text-align: left

	&.-right
		text-align: right

	// Font styles
	&.-bold
		font-weight: 600

	// Colors
	&.-greenFONT
		color: $let_mainGreenMiddle

	&.-whiteFONT
		color: #fff

	&.-blackFONT
		color: #000

	&.-defaultFONT
		color: $let_defaultTextColor

// MOBILE DESCRIPTION
.mobileDescription
	display: none

	+BSQ_XS()
		display: inline-block
		position: absolute
		left: 70px
		&:before
			content: '|'
			margin: 0 10px

// FANCY RADIO BUTTONS
.fancyRadio
	width: 12px
	height: 12px
	border: #838383 2px solid
	border-radius: 50%
	cursor: pointer
	position: relative

input[type='radio']:checked+.fancyRadio
	&:before
		content: ''
		border-radius: 50%
		M_absolute_center()
		width: 8px
		height: 8px
		background-color: $let_mainGreenMiddle

// FANCY CHECKBOX BUTTONS
.fancyCheckbox 
	background-image: url('../images/icons/checkboxOff.png')
	cursor: pointer
	width: 14px
	height: 14px
	background-size: contain

input[type='checkbox']:checked+.fancyCheckbox
	background-image: url('../images/icons/checkboxOn.png')